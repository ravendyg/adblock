{
  "manifest_version": 2,

  "name": "ultimate adblock ))",
  "description": "trash",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [ {
    "js": [ "ct.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "background": {
      "scripts": ["bg.js"],
      "persistent": false 
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
